@model BookStore.ViewModels.EditorBookViewModel
@{
    ViewBag.Title = "Criando um novo livro...";
}


@helper MyFunction(string name)
{
    <br />
    <text>Você está logado @name </text>
}

<p>
    @MyFunction("Michael Peter")
</p>


<h2>Novo Livro</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    <div class="alert alert-danger">
        @Html.ValidationMessage("Mensagem")
    </div>

    @Html.Partial("Partials/EditorBookPartial", Model)
    //Layout = "~/Views/Shared/_LayoutNovo.cshtml";

    @Html.EditorFor(x => x.Age)
    @Html.ValidationMessageFor(x => x.Age)

    <button type="submit" class="btn btn-default">Salvar</button>

}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}